<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_anchorGravity="top|left"
    tools:context=".fragments.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/catPekarny"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="#FADBB5"
            android:contentDescription="@string/Cat_Pekarny"
            android:gravity="clip_vertical"
            android:text="@string/Cat_Pekarny"
            android:textStyle="italic|bold"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <Button
            android:id="@+id/catFasfud"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="#FDFA9B9B"
            android:gravity="clip_vertical"
            android:text="@string/fasfud"
            android:textStyle="italic|bold"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/catAziat"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="#70E0ED"
            android:gravity="clip_vertical"
            android:text="@string/aziat"
            android:textStyle="italic|bold"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/catSupi"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="#C0E4A3"
            android:gravity="clip_vertical"
            android:text="@string/supi"
            android:textStyle="italic|bold"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>